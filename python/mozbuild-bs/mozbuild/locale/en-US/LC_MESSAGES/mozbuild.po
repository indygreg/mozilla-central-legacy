msgid "compiler.cc.full"
msgstr "Path to C compiler."

msgid "compiler.cflags.short"
msgstr "C Compiler Arguments"

msgid "compiler.cflags.full"
msgstr "Extra arguments to add to C compiler invocations."

msgid "compiler.cxx.short"
msgstr "C++ Compiler"

msgid "compiler.cxx.full"
msgstr "Path to C++ compiler."

msgid "compiler.cxxflags.short"
msgstr "C++ Compiler Arguments"

msgid "compiler.cxxflags.full"
msgstr "Extra arguments to add to C++ compiler invocations."
