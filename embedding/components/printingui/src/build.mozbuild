if CONFIG.MOZ_PDF_PRINTING:
    DIRS += ['unixshared']

toolkit = CONFIG.MOZ_WIDGET_TOOLKIT

if toolkit == 'os2':
    DIRS += ['os']
elif toolkit == 'windows':
    DIRS += ['win']
elif toolkit == 'cocoa':
    DIRS += ['mac']
